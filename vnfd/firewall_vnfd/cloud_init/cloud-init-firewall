#cloud-config - firewall
password: osm
chpasswd: { expire: False }
ssh_pwauth: True 

users:
  - name: ubuntu
    ssh-authorized-keys:
      - ssh-rsa  abubakrm@dyn-227-202.lancs.ac.uk

runcmd: 
  - echo $(hostname -I | cut -d\  -f1) $(hostname) | sudo tee -a /etc/hosts
  - sed -i '/^APT::Periodic::Update-Package-Lists /s/"1"/"0"/' /etc/apt/apt.conf.d/20auto-upgrades
  - sed -i '/^APT::Periodic::Unattended-Upgrade /s/"1"/"0"/' /etc/apt/apt.conf.d/20auto-upgrades
  - sudo ifconfig ens4 192.168.10.15 netmask 255.255.255.0
  - sudo ifconfig ens5 192.168.20.25 netmask 255.255.255.0
  - mkdir /home/ubuntu/bin
  - sudo sysctl -w net.ipv4.ip_forward=1

write_files:
-   content: |
        #!/bin/bash
        
        echo ""
        ping -c 3 192.168.10.5 && 
        echo "-------------------------------------------------------------------------------"
        ping -c 3 192.168.10.15 &&
        echo "-------------------------------------------------------------------------------"
        ping -c 3 192.168.20.25 &&
        echo "-------------------------------------------------------------------------------"
        ping -c 3 192.168.20.35 &&
        echo "-------------------------------------------------------------------------------"
        ping -c 3 192.168.28.2 &&
        echo ""

    owner: root:root
    permissions: '755'
    path: /home/ubuntu/bin/check-interfaces

